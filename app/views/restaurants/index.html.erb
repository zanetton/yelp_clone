<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= restaurant.name %></h2>
  <% if restaurant.reviews.any? %>
    <ul>
     <% restaurant.reviews.each do |review| %>
      <li>
       <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
       <%= link_to "Endorse #{restaurant.name}", restaurant_review_endorsements_path(restaurant, review), class: 'endorsements-link' %>
       <span class='endorsements_count'> <%= review.endorsements.count %> </span> <%= 'endorsement'.pluralize(review.endorsements.count) %>
       <%= link_to "Delete Review", restaurant_review_path(restaurant, review), method: :delete %>
    </li>
  <% end %>
    </ul>
<% else %>
 <p>No reviews.</p>
<% end %>
    <%= link_to restaurant.name, restaurant_path(restaurant) %>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
    <h3>Average rating: <%= star_rating(restaurant.average_rating) %></h3>
    <% if current_user %>
      <% if current_user.id == restaurant.user_id %>
        <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
        <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <h1>No restaurants yet</h1>
<% end %>





